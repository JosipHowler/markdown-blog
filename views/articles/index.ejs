<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Blog Articles</h1>
        <a href="articles/newArticle" class="btn btn-success btn-lg mt-4">New Article</a>
        <div class="cards mt-4">
            <% articles.forEach(article => { %>
            <div class="card mb-4">
                <div class="card-body">
                    <h1 class="card-title mb-2"><%= article.title %></h1>
                    <h5 class="card-subtitle mb-2 text-muted"><%= article.createdAt.toLocaleDateString() %></h5>
                    <p class="card-text"><%= article.description %></p>
                    <a href="articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
</html>